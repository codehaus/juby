
*.o : juby.h

juby.o:	juby_jni.h

juby_jni.h: juby.jar
	javah -o juby_jni.h -classpath juby.jar com.radarnetworks.juby.Value com.radarnetworks.juby.Ary

juby_jni.o: juby_jni.h

juby.jar: ./java/com/radarnetworks/juby/Juby.java ./java/com/radarnetworks/juby/Value.java ./java/com/radarnetworks/juby/Ary.java
	javac -source 1.2 -sourcepath ./java ./java/com/radarnetworks/juby/*.java
	cd ./java && jar cvf ../juby.jar com/radarnetworks/juby/*.class


dev: $(DLLIB) juby.jar
	mkdir -p dist/juby
	@$(INSTALL_PROG) $(DLLIB) dist
	@$(INSTALL_DATA) $(srcdir)/lib/juby/juby.rb dist/juby                                                                                                                                                      
	@$(INSTALL_PROG) juby.jar dist

clean: jniclean javaclean devclean

jniclean:
	rm -f ./juby_jni.h

javaclean:
	rm -f ./juby.jar
	rm -f ./java/com/radarnetworks/juby/*.class

devclean:
	rm -Rf dist
